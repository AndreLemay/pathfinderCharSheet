{
    "include": [
        "app/scripts/*"
    ],
    "compilerOptions": {
        "lib": [
            "es6"
        ],
        "types": [
            "node"
        ],
        "target": "es6",
        "pretty": true,
        "module": "commonjs",
        "outDir": "./build",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ]
}